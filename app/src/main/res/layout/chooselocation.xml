<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.google.ar.core.examples.java.helloar.HelloArActivity"
    android:layout_centerInParent="true">

    <android.opengl.GLSurfaceView
        android:id="@+id/surfaceview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:layout_gravity="top" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Choose Your Location"
            android:textColor="#000000"
            android:textSize="26sp"
            android:fontFamily="@font/nanum3"></TextView>

        <LinearLayout
            android:layout_width="322dp"
            android:layout_height="62dp"
            android:layout_margin="50dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/forest"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:background= "@drawable/button_border"
                android:textColor="@android:color/black"
                android:text="Forest"
                android:fontFamily="@font/nanum3"></Button>

            <Button
                android:id="@+id/beach"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/button_border"
                android:textColor="@android:color/black"
                android:text="Beach"
                android:fontFamily="@font/nanum3"></Button>

            <Button
                android:id="@+id/river"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:background="@drawable/button_border"
                android:textColor="@android:color/black"
                android:text="River"
                android:fontFamily="@font/nanum3"></Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="322dp"
            android:layout_height="62dp"
            android:layout_margin="50dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/campingsite"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:background="@drawable/button_border"
                android:textColor="@android:color/black"
                android:text="Camping Site"
                android:fontFamily="@font/nanum3"></Button>

            <Button
                android:id="@+id/city"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/button_border"
                android:textColor="@android:color/black"
                android:text="City"
                android:fontFamily="@font/nanum3"></Button>

            <Button
                android:id="@+id/writeyourown"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:background="@drawable/button_border"
                android:textColor="@android:color/black"
                android:text="Write"
                android:fontFamily="@font/nanum3"></Button>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>